<h1>Comments List</h1>

<div id="userInfo">
   
<table class="table table-striped">

    <% 
            
    if (typeof list != 'undefined' && list != null && list.length > 0) {
     
            list.forEach( function ( commentData ){
                    %>

            <tr>
                <td id="tData"><%= commentData.comment %></td>
                <td id="tData"><%= commentData.content %></td> 
                
                <td id="tData">
                    <div id ="editDelete">
                            <a href="/comment/edit/<%=commentData._id %>"><i class="fa fa-pencil-square-o fa-lg" style="color:#14b7eb"
                                data-toggle="tooltip" data-placement="bottom" title="Edit Comment"></i></a>
                    
                    
                            <a href="/comment/delete/<%=commentData._id %>"><i class="fa fa-trash fa-lg" style="color:#f75063"
                                data-toggle="tooltip" data-placement="bottom" title="Delete Comment"></i></a>
</div>
                        </td>          
                                        
            </tr>  
            
<% });
} else { %>
            <tr><td colspan="3"> No Data </td></tr>
<% } %>


</table>
</div>
<div id="accBtn">
    <a href="/account" class="btn btn-info" >Back <i class="fas fa-window-close"></i></a>
</div>

