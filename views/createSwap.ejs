<h1>Add your item here...</h1> 
<hr>

<form action="/newSwap" method="POST" class="custom-form2" enctype="multipart/form-data"> 
    <div class="form-group row">
        <div class="form-group"> 
            <label for="title">Item Name</label> 
            <input type="text" id="title" class="form-control" placeholder="Item Name" 
                   value="" name="title" required> 
        </div>
        <div class="form-group"> 
            <label for="desc">Item Description</label> 
            <textarea id="desc1" name="desc" value=""  
            class="form-control" placeholder="Item Description" required> 
            </textarea> 
        </div> 
        <div class="form-group"> 
            <label for="image">Upload Image</label> 
            <input type="file" id="image" name="image" accept="image/*" value="" required> 
        </div>

        <div class="form-group"> 
            <label for="category">Choose a Category</label> 
            <select id="category"  name="catagory" class="form-control">
                <option disabled="disabled" selected="selected">Select Item Category</option>
                <option>Household</option>
                <option>Garden</option>
                <option>Kids</option>
                <option>DIY</option>
                <option>Pets</option>
                <option>Misc</option>
              </select>
            </div>

        <div class="form-group"> 
            <label for="price">Price: Â£</label> 
            <input type="number" id="price" 
             name="price" value="0.00" step="0.01" min="0" style="color:black" required> 
        </div>

        <div class="form-group">
        <button type="submit" class="btn btn-success" style="margin-right:10px">Add <i class="fa fa-plus"></i>        
        </button>
        <a href="/account" class="btn btn-info">Cancel <i class="fas fa-window-close"></i></a>
        </div>
</div> 

</form>