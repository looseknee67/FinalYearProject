<h1>Edit Post</h1><hr>

<form class="custom-form" action="/editpost/<%= list.id %>" ?_method="PUT" method="POST">

<div>
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title" style="color: black" value= "<%= list.title %>" ></input>
</div>

<div>
    <label for="content">Content</label>
    <textarea class="form-control" rows="3" cols="54" placeholder="Add a new reply..." name="content"><%= list.content %></textarea>
</div><br>

<div class="form-group">
    <button type="submit" class="btn btn-success" style="margin-right:10px">Edit <i class="fa fa-pencil-square-o fa-m"></i>     
    </button>
    <a href="/account" class="btn btn-info">Cancel <i class="fas fa-window-close"></i></a>
</form>