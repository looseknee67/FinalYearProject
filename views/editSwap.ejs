<h1>Edit Swap</h1><hr>

<form class="custom-form2" action="/editswap/<%= list.id %>" ?_method="PUT" method="POST">
    <img id="photoSmall" src="data:image/<%=list.img.contentType%>;base64, <%=list.img.data.toString('base64')%>">


<div>
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title" style="color: black" value= "<%= list.title %>" ></input>
</div>

<div>
    <label for="desc">Description</label>
    <textarea class="form-control" rows="3" cols="54"  name="desc"><%= list.desc %></textarea>
</div>

<div class="form-group"> 
    <label for="category">Choose a Category</label> 
    <select id="category"  name="catagory" class="form-control">
        <option disabled="disabled" selected="selected">Select Item Category</option>
        <option>Household</option>
        <option>Garden</option>
        <option>Kids</option>
        <option>DIY</option>
        <option>Pets</option>
        <option>Misc</option>
      </select>
    </div>

<div class="form-group"> 
    <label for="category">Add a Price</label> <br>
    <label for="price">Price Â£</label> 
    <input type="number" id="price" 
     name="price" value="0.00" step="0.01" min="0" style="color:black" required> 
</div>

<div class="form-group">
    <button type="submit" class="btn btn-success" style="margin-right:10px">Edit <i class="fa fa-pencil-square-o fa-m"></i>
    </button>
    <a href="/account" class="btn btn-info">Cancel <i class="fas fa-window-close"></i></a>

</form>