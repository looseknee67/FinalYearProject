<h1>Swaps List</h1>

<div id="userInfo">
   
<table class="table table-striped" id="swapTable">
   
    <% 
    if (typeof list != 'undefined' && list != null && list.length > 0) { %>

<tr id="del">
  <th>Item</th>
  <th>Info</th>
  <th>Price</th>
  <th>Category</th>
  <th>Image</th>
  <th>Edit/Delete</th>
</tr>
     
         <%   list.forEach( function ( swapData ){
                    %>

            <tr>
                <td id="tData"><%= swapData.title %></td>
                <td id="tData"><%= swapData.desc %></td> 
                <td id="del">Â£ <%= swapData.price %></td>
                <td id="del"><%= swapData.catagory %></td>
                <td id="del"><img id="photoSmall" src="data:image/<%=swapData.img.contentType%>;base64, <%=swapData.img.data.toString('base64')%>"></td> 
                <td id="tData">
                    <div id ="editDelete">
                            <a href="/swaps/edit/<%=swapData._id %>"><i class="fa fa-pencil-square-o fa-m" style="color:#14b7eb"
                                data-toggle="tooltip" data-placement="bottom" title="Edit swap"></i></a>
                    
                    
                                <a id="itemId" href="/swaps/delete/<%=swapData._id %>">
                            <i class="fa fa-trash fa-m" id="del" style="color:#f75063"                           
                             data-toggle="tooltip" data-placement="bottom" title="Delete Swap"></i></a>
</div>
                        </td>          
                                        
            </tr>  
         
<% });
} else { %>
            <tr><td colspan="3"> No Data </td></tr>
<% } %>


</table>
</div>
